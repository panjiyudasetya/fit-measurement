<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.BoldMenuItem" parent="AppTheme.AppBarOverlay">
        <!-- Customize your theme here. -->
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.BarTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="AppTheme.Text" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/text_default</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.Text.Time" parent="AppTheme.Text">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:padding">@dimen/margin_small</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>
